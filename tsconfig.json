{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types","src/common/types"],
      "strictPropertyInitialization": false
     
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.yaml"],
    "exclude": ["node_modules"],
    "ts-node": {
      "files": true
    },
    "files": [
      "src/agent/main.ts",
      "src/server/main.ts",
      "src/mock-server/secretManager.ts",
      "src/common/types/customRequest.d.ts"
    ]
}